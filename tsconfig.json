{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["es2020"],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "build",
        "coverage",
        "ecosystem.config.js",
        "jest.config.js",
        "**/*.test.ts"
    ]
}
